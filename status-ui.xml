<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="status">
        <area>0,0,1280,720</area>

        <textarea name="heading" from="base_heading">
            <value>System Status</value>
        </textarea>

        <shape name="groupbox" from="base_backdrop">
            <area>0,35,1280,32</area>
            <type>box</type>
        </shape>

        <shape name="groupbox-top-line" from="base_line">
            <area>0,36,1280,2</area>
        </shape>

        <shape name="groupbox-bottom-line" from="base_line">
            <area>0,64,1280,2</area>
        </shape>

        <shape name="status-backdrop" from="base_backdrop">
            <area>20,76,1240,337</area>
        </shape>

        <shape name="status-backdrop-line" from="base_backdrop_line">
            <area>21,77,1238,335</area>
        </shape>

        <shape name="status-list-top-line" from="base_highlight_line">
            <area>22,78,1236,2</area>
        </shape>

        <shape name="status-list-bottom-line" from="base_highlight_line">
            <area>22,409,1236,2</area>
        </shape>

        <shape name="status-list-left-line" from="base_highlight_vertical_line">
            <area>22,80,2,329</area>
        </shape>

        <shape name="status-list-right-line" from="base_highlight_vertical_line">
            <area>1256,80,2,329</area>
        </shape>

        <shape name="status-bottom-backdrop" from="base_backdrop">
            <area>20,423,1240,262</area>
        </shape>

        <shape name="status-bottom-backdrop-line" from="base_backdrop_line">
            <area>21,424,1238,260</area>
        </shape>

        <shape name="status-bottom-top-line" from="base_highlight_line">
            <area>22,425,1236,2</area>
        </shape>

        <shape name="status-bottom-bottom-line" from="base_highlight_line">
            <area>22,681,1236,2</area>
        </shape>

        <shape name="status-bottom-left-line" from="base_highlight_vertical_line">
            <area>22,427,2,256</area>
        </shape>

        <shape name="status-bottom-right-line" from="base_highlight_vertical_line">
            <area>1256,427,2,256</area>
        </shape>

        <shape name="status-bottom-seperator-first-line" from="base_line">
            <area>43,469,1194,2</area>
        </shape>

       <buttonlist name="category">
            <area>0,38,1280,26</area>
            <spacing>0</spacing>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>horizontal</layout>
            <buttonarea>0,0,1280,26</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>8,0,255,26</area>
                    <textarea name="buttontext" from="basetextarea">
                        <area>0,0,240,26</area>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                        <font>basesmaller</font>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>8,0,255,26</area>
                    <textarea name="buttontext" from="basetextarea">
                        <area>0,0,240,26</area>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                        <font>basemediumyellow</font>
                        <alphapulse min="127" max="255" change="2"/>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active">
                    <textarea name="buttontext" from="basetextarea">
                        <area>0,0,240,26</area>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                        <font>basemediumyellow</font>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>

        <buttonlist name="log" from="base_list_state">
            <area>30,84,1220,328</area>
            <layout>vertical</layout>
            <spacing>-2</spacing>
            <scrollstyle>free</scrollstyle>
            <arrange>stack</arrange>
            <wrapstyle>items</wrapstyle>
            <buttonarea>0,0,100%,100%</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,1220,31</area>
                    <shape name="buttonbackground" from="base_select_bar_active">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <textarea name="buttontext" from="base_text_font_state_small">
                        <area>15,-1,1190,31</area>
			<font state="normal">basesmallverylightgrey</font>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,1220,31</area>
                    <textarea name="buttontext" from="base_text_font_state_small">
                        <area>15,-1,1190,31</area>
			<font state="normal">basesmall</font>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active">
                    <shape name="buttonbackground" from="base_button_background_disabled">
                        <area>0,0,100%,100%</area>
                        <cornerradius>15</cornerradius>
                    </shape>
                    <textarea name="buttontext">
                        <font>basesmalllightgrey</font>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>1211,-6</position>
                <state type="off">
                    <imagetype name="upoff">
                        <filename>images/lists_up_arrow.png</filename>
                        <alpha>80</alpha>
                    </imagetype>
                </state>
            <state type="full">
                <imagetype name="upon">
                    <filename>images/lists_up_arrow.png</filename>
                    <alpha>200</alpha>
                </imagetype>
            </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>1211,319</position>
                <state type="off">
                    <imagetype name="dnoff">
                        <filename>images/lists_down_arrow.png</filename>
                        <alpha>80</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>images/lists_down_arrow.png</filename>
                        <alpha>200</alpha>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="helplabel">
            <area>44,436,1192,34</area>
            <value>Details</value>
            <font>basemediumyellow</font>
        </textarea>

        <textarea name="helptext">
            <area>44,476,1192,200</area>
            <font>basesomewhatsmaller</font>
            <value>This screen displays the status of various system components</value>
            <multiline>yes</multiline>
        </textarea>

    </window>

    <window name="standbymode">
        <area>-1,-1,640,360</area>

        <animation trigger="AboutToShow">
            <section>
                <alpha start="0" end="255" easingcurve="OutQuart"/>
                <zoom start="0" end="100" easingcurve="OutQuart"/>
            </section>
        </animation>

        <animation trigger="AboutToHide">
            <section>
                <alpha start="255" end="0" easingcurve="InQuart"/>
                <zoom start="100" end="0" easingcurve="InQuart"/>
            </section>
        </animation>

        <shape name="standbymode-backdrop" from="base_backdrop">
            <area>0,0,640,360</area>
        </shape>

        <shape name="standbymode-backdrop-line" from="base_backdrop_line">
            <area>1,1,638,358</area>
        </shape>

        <shape name="standbymode-top-line" from="base_highlight_line">
            <area>2,2,636,2</area>
        </shape>

        <shape name="standbymode-bottom-line" from="base_highlight_line">
            <area>2,356,636,2</area>
        </shape>

        <shape name="standbymode-left-line" from="base_highlight_vertical_line">
            <area>2,4,2,352</area>
        </shape>

        <shape name="standbymode-right-line" from="base_highlight_vertical_line">
            <area>636,4,2,352</area>
        </shape>

        <textarea name="title">
            <area>4,4,632,70</area>
            <font>baselarge</font>
            <align>allcenter</align>
            <value>MythTV is in standby mode!</value>
        </textarea>

        <statetype name="backendstatus">
            <area>4,64,632,292</area>
            <state name="idle">
                <area>0,0,632,292</area>
                <shape name="icon">
                    <area>87,10,458,212</area>
                    <type>roundbox</type>
                    <fill color="#80d400" />
                    <cornerradius>5</cornerradius>
                </shape>
                <textarea name="status">
                    <area>0,222,632,70</area>
                    <font>baselargegreen</font>
                    <value>Backend is idle!</value>
                    <align>allcenter</align>
                    <multiline>true</multiline>
                </textarea>
            </state>
            <state name="recording" from="idle">
                <shape name="icon">
                    <fill color="#d93636" />
                </shape>
                <textarea name="status">
                    <font>baselargered</font>
                    <value>Backend is recording!</value>
                </textarea>
            </state>
            <state name="shuttingdown" from="idle">
                <shape name="icon">
                    <fill color="#d9d900" />
                </shape>
                <textarea name="status">
                    <font>baselargeyellow</font>
                    <value>Shutting Down!</value>
                </textarea>
            </state>
            <state name="offline" from="idle">
                <shape name="icon">
                    <fill color="#d93636" />
                </shape>
                <textarea name="status">
                    <font>baselargered</font>
                    <value>Backend is offline!</value>
                </textarea>
            </state>
        </statetype>

    </window>

</mythuitheme>
