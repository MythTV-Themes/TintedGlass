<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="iconimport">

        <textarea name="heading" from="base_heading">
            <value>Icon Import</value>
        </textarea>

        <shape name="icon-import-search-term-backdrop" from="base_backdrop">
            <area>238,38,800,106</area>
        </shape>

        <shape name="icon-import-search-term-edge-highlight" from="base_backdrop_with_edge_highlight">
            <area>236,36,804,110</area>
            <fill style="gradient">
                <gradient alpha="170" direction="vertical">
                    <stop position="0" color="#ffffff" />
                    <stop position="14" color="#000000" alpha="80" />
                    <stop position="86" color="#000000" alpha="80" />
                    <stop position="100" color="#ffffff" alpha="160" />
                </gradient>
            </fill>
        </shape>

        <shape name="icon-import-icon-list-backdrop" from="base_backdrop">
            <area>440,159,400,523</area>
        </shape>

        <shape name="icon-import-icon-list-edge-highlight" from="base_backdrop_with_edge_highlight">
            <area>438,157,404,527</area>
            <fill style="gradient">
                <gradient alpha="170" direction="vertical">
                    <stop position="0" color="#ffffff" />
                    <stop position="3" color="#000000" alpha="80" />
                    <stop position="97" color="#000000" alpha="80" />
                    <stop position="100" color="#ffffff" alpha="160" />
                </gradient>
            </fill>
        </shape>

        <textarea name="manuallabel" from="basetextarea">
            <area>268,55,150,30</area>
            <font>basesmall</font>
            <align>left,vcenter</align>
            <value>Search Terms:</value>
        </textarea>

        <textedit name="manualsearch" from="base_wide_textedit">
            <area>430,54,580,32</area>
        </textedit>

        <button name="search" from="base_button">
            <position>404,96</position>
            <value>Search</value>
        </button>

        <button name="skip" from="base_button">
            <position>722,96</position>
            <value>Skip</value>
        </button>

        <textarea name="name" from="basetextarea">
            <area>440,161,400,20</area>
            <font>basesmalleryellow</font>
            <align>allcenter</align>
        </textarea>

        <buttonlist name="icons" from="base_list_medium_selector_large_width">
            <area>440,189,400,480</area>
            <layout>vertical</layout>
            <spacing>-2</spacing>
            <scrollstyle>free</scrollstyle>
            <arrange>stack</arrange>
            <wrapstyle>items</wrapstyle>
            <buttonarea>0,0,100%,100%</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,400,60</area>
                    <imagetype name="icon">
                        <area>0,5,80,50</area>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>100,5,292,50</area>
                        <align>allcenter</align>
                        <multiline>yes</multiline>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,400,60</area>
                    <imagetype name="icon">
                        <area>0,5,80,50</area>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>100,5,292,50</area>
                        <align>allcenter</align>
                        <multiline>yes</multiline>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="upscrollarrow">
                <position>362,-23</position>
            </statetype>
            <statetype name="downscrollarrow">
                <position>362,469</position>
            </statetype>
        </buttonlist>

        <textarea name="status" from="basetextarea">
            <area>438,157,404,520</area>
	    <multiline>yes</multiline>
<!-- Displays whether or not found. So better off just disabling it all together. -->
            <alpha>0</alpha>
            <align>allcenter</align>
        </textarea>

    </window>

    <window name="channeloverview">

        <textarea name="heading" from="base_heading">
            <value>Edit Channels</value>
        </textarea>

        <shape name="edit-channels-top-backdrop" from="base_backdrop">
            <area>22,38,1236,396</area>
        </shape>

        <shape name="edit-channels-top-edge-highlight" from="base_backdrop_with_edge_highlight">
            <area>20,36,1240,400</area>
            <fill style="gradient">
                <gradient alpha="170" direction="vertical">
                    <stop position="0" color="#ffffff" />
                    <stop position="4" color="#000000" alpha="80" />
                    <stop position="96" color="#000000" alpha="80" />
                    <stop position="100" color="#ffffff" alpha="160" />
                </gradient>
            </fill>
        </shape>

        <shape name="edit-channels-bottom-backdrop" from="base_backdrop">
            <area>22,450,1236,232</area>
        </shape>

        <shape name="edit-channels-bottom-edge-highlight" from="base_backdrop_with_edge_highlight">
            <area>20,448,1240,236</area>
            <fill style="gradient">
                <gradient alpha="170" direction="vertical">
                    <stop position="0" color="#ffffff" />
                    <stop position="6" color="#000000" alpha="80" />
                    <stop position="94" color="#000000" alpha="80" />
                    <stop position="100" color="#ffffff" alpha="160" />
                </gradient>
            </fill>
        </shape>

        <shape name="edit-channels-bottom-line" from="base_line">
            <area>45,624,1190,2</area>
        </shape>

    <buttonlist name="channels" from="base_list_large_width">
        <area>22,59,1236,356</area>
        <statetype name="buttonitem">
            <state name="active">
                <area>0,0,1236,34</area>
                <textarea name="channum" from="buttontext">
                    <area>18,5,60,24</area>
                </textarea>
                <imagetype name="icon">
                    <area>96,5,36,24</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <textarea name="name" from="channum">
                    <area>150,4,750,24</area>
                </textarea>
                <textarea name="sourcename" from="channum">
                    <area>918,4,300,24</area>
                    <align>right,vcenter</align>
                </textarea>
            </state>
            <state name="selectedactive">
                <area>0,0,1236,34</area>
                <textarea name="channum" from="buttontext">
                    <area>18,5,60,24</area>
                </textarea>
                <imagetype name="icon">
                    <area>96,5,36,24</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <textarea name="name" from="channum">
                    <area>150,4,750,24</area>
                </textarea>
                <textarea name="sourcename" from="channum">
                    <area>918,4,300,24</area>
                    <align>right,vcenter</align>
                </textarea>
            </state>
            <state name="selectedinactive">
                <area>0,0,1236,34</area>
                <textarea name="channum" from="buttontext">
                    <area>18,5,60,24</area>
                </textarea>
                <imagetype name="icon">
                    <area>96,5,36,24</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <textarea name="name" from="channum">
                    <area>150,4,750,24</area>
                </textarea>
                <textarea name="sourcename" from="channum">
                    <area>918,4,300,24</area>
                    <align>right,vcenter</align>
                </textarea>
            </state>
        </statetype>
        <statetype name="upscrollarrow">
            <position>1196,-20</position>
        </statetype>
        <statetype name="downscrollarrow">
            <position>1196,356</position>
        </statetype>
    </buttonlist>

        <textarea name="sortlabel" from="basetextarea">
            <area>245,475,160,30</area>
            <value>Sort Mode:</value>
            <font>basemedium</font>
            <align>right,vcenter</align>
        </textarea>

        <buttonlist name="sorting" from="base_selector">
            <area>415,470,580,40</area>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,580,40</area>
                    <textarea name="buttontext">
                        <area>15,8,550,24</area>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,580,40</area>
                    <textarea name="buttontext">
                        <area>15,8,550,24</area>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="downscrollarrow">
                <position>584,2</position>
            </statetype>
            <statetype name="upscrollarrow">
                <position>584,21</position>
            </statetype>
        </buttonlist>

        <textarea name="sourcelabel" from="sortlabel">
            <position>245,530</position>
            <value>Video Source:</value>
        </textarea>

        <buttonlist name="source" from="sorting">
            <area>415,525,580,40</area>
        </buttonlist>

        <button name="delete" from="base_button">
            <position>1030,527</position>
            <value>Delete</value>
        </button>

        <textarea name="nochannumlabel" from="basetextarea">
            <area>450,585,500,60</area>
            <value>Hide Channels without channel number.</value>
        </textarea>

        <checkbox name="nochannum" from="basecheckbox">
            <position>410,580</position>
        </checkbox>

        <button name="scan" from="base_medium_button">
            <position>68,634</position>
            <value>Channel Scan</value>
        </button>

        <button name="importicons" from="base_medium_button">
            <position>465,634</position>
            <value>Icon Download</value>
        </button>

        <button name="edittransport" from="base_medium_button">
            <position>862,634</position>
            <value>Edit Transports</value>
        </button>

    </window>
</mythuitheme>
