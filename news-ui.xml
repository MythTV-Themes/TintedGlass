                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <textarea name="buttontext" from="basetextarea">
                        <area>8,1,405,27</area>
                        <align>hcenter,bottom</align>
                        <cutdown>yes</cutdown>
                        <font>basesmallyellow</font>
                        <alphapulse min="127" max="255" change="2" />
                    </textarea>
                </state>
                <state name="selectedinactive" from="active">
                    <textarea name="buttontext" from="basetextarea">
                        <area>8,1,405,27</area>
                        <align>hcenter,bottom</align>
                        <cutdown>yes</cutdown>
                        <font>basesmallyellow</font>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>

        <buttonlist name="articleslist" from="base_list_large_width">
            <area>22,102,1236,360</area>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,1236,34</area>
                    <textarea name="buttontext">
                        <area>18,0,1200,34</area>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,1236,34</area>
                    <textarea name="buttontext">
                        <area>18,0,1200,34</area>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="upscrollarrow">
                <position>1196,-19</position>
            </statetype>
            <statetype name="downscrollarrow">
                <position>1196,354</position>
            </statetype>
        </buttonlist>

        <textarea name="nosites" from="basetextarea">
            <area>40,98,1200,360</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="updated" from="basetextarea">
            <area>40,456,1200,20</area>
            <font>baseextrasmallyellow</font>
