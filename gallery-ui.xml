<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.xsd">
<mythuitheme>

    <window name="gallery">

        <textarea name="heading" from="base_heading">
            <value>Image Gallery</value>
        </textarea>

        <shape name="image-gallery-backdrop" from="base_backdrop">
            <area>0,36,1280,450</area>
            <type>box</type>
        </shape>

        <shape name="image-gallery-top-line" from="base_line">
            <area>0,37,1280,2</area>
        </shape>

        <shape name="image-gallery-bottom-line" from="base_line">
            <area>0,483,1280,2</area>
        </shape>

        <shape name="image-gallery-bottom-backdrop" from="base_backdrop">
            <area>20,496,1240,189</area>
        </shape>

        <shape name="image-gallery-bottom-backdrop-line" from="base_backdrop_line">
            <area>21,497,1238,187</area>
        </shape>

        <shape name="image-gallery-bottom-top-line" from="base_highlight_line">
            <area>22,498,1236,2</area>
        </shape>

        <shape name="image-gallery-bottom-bottom-line" from="base_highlight_line">
            <area>22,681,1236,2</area>
        </shape>

        <shape name="image-gallery-bottom-left-line" from="base_highlight_vertical_line">
            <area>22,500,2,181</area>
        </shape>

        <shape name="image-gallery-bottom-right-line" from="base_highlight_vertical_line">
            <area>1256,500,2,181</area>
        </shape>

        <shape name="image-gallery-bottom-seperator-first-line" from="base_line">
            <area>43,591,1194,2</area>
        </shape>

        <buttonlist name="images">
            <area>35,65,1220,400</area>
            <layout>grid</layout>
            <spacing>8</spacing>
            <buttonarea>0,0,1220,400</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,166,125</area>
                    <imagetype name="buttonimage">
                        <area>0,0,166,125</area>
                        <preserveaspect>yes</preserveaspect>
                        <filename>images/image_gallery_no_image.png</filename>
                    </imagetype>
                    <statetype name="nodetype">
                        <position>0,50</position>
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>56,10,53,40</area>
                                <filename>images/folderclosed.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>56,10,53,40</area>
                                <filename>images/mv_gallery_dir_up.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="childcount" from="basetextarea">
                        <area>60,73,45,20</area>
                        <font>baseextrasmallyellow</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>-23,-18,237,180</area>
                    <shape name="buttonbackground">
                        <area>-13,-9,238,180</area>
                        <type>roundbox</type>
                        <fill color="#101017" alpha="255" />
                        <cornerradius>8</cornerradius>
                    </shape>
                    <shape name="buttonbackground-line">
                        <area>-13,-9,238,180</area>
                        <type>roundbox</type>
                        <fill color="#000000" alpha="0" />
                        <line color="#ffffff" alpha="45" width="4" />
                        <cornerradius>5</cornerradius>
                    </shape>
                    <shape name="buttonbackground-top-highlight-line">
                        <area>-3,-7,218,4</area>
                         <type>box</type>
                        <fill style="gradient">
                            <gradient direction="horizontal" alpha="0">
                                <stop position="0" color="#ffffff" />
                                <stop position="50" color="#ffffff" alpha="180" />
                                <stop position="100" color="#ffffff" />
                            </gradient>
                        </fill>
                    </shape>
                    <shape name="buttonbackground-bottom-highlight-line" from="buttonbackground-top-highlight-line">
                        <area>-3,165,218,4</area>
                    </shape>
                    <shape name="buttonbackground-left-highlight-line">
                        <area>-11,-1,4,164</area>
                        <type>box</type>
                        <fill style="gradient">
                            <gradient alpha="0" direction="vertical">
                                <stop position="0" color="#ffffff" />
                                <stop position="50" color="#ffffff" alpha="220" />
                                <stop position="100" color="#ffffff" />
                            </gradient>
                        </fill>
                    </shape>
                    <shape name="buttonbackground-right-highlight-line" from="buttonbackground-left-highlight-line">
                        <area>219,-1,4,164</area>
                    </shape>
                    <imagetype name="buttonimage">
                        <area>-6,-2,224,166</area>
                        <preserveaspect>yes</preserveaspect>
                        <filename>images/image_gallery_no_image.png</filename>
                    </imagetype>
                    <statetype name="nodetype">
                        <position>0,50</position>
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>82,38,53,40</area>
                                <filename>images/folderopen.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>82,38,53,40</area>
                                <filename>images/mv_gallery_dir_up_open.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="childcount" from="basetextarea">
                        <area>88,106,45,20</area>
                        <font>baseextrasmallyellow</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>1188,422</position>
                <state type="full">
                    <imagetype name="upon">
                        <filename>images/lists_up_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>1208,422</position>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>images/lists_down_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="noimages" from="basetextarea">
            <area>20,36,1240,451</area>
            <font>basemedium</font>
            <align>allcenter</align>
        </textarea>

        <textarea name="title" from="basetextarea">
            <area>24,500,1232,91</area>
            <font>basemedium</font>
            <multiline>true</multiline>
            <align>allcenter</align>
        </textarea>

        <textarea name="help1">
            <area>0,593,1280,44</area>
            <font>basesmallerblue</font>
            <align>allcenter</align>
            <value>Press Select: To View Full Screen.</value>
        </textarea>

        <textarea name="help2">
            <area>0,637,1280,44</area>
            <font>basesmallerblue</font>
            <align>allcenter</align>
            <value>Press Menu:  To Activate Gallery Options Menu.</value>
        </textarea>

    </window>

    <window name="filter">

        <textarea name="heading" from="base_heading">
            <value>Filter/Sort Images</value>
        </textarea>

        <shape name="filter-backdrop" from="base_backdrop">
            <area>215,36,850,649</area>
        </shape>

        <shape name="filter-backdrop-line" from="base_backdrop_line">
            <area>216,37,848,506</area>
        </shape>

        <shape name="filter-top-line" from="base_highlight_line">
            <area>217,38,846,2</area>
        </shape>

        <shape name="filter-bottom-line" from="base_highlight_line">
            <area>217,540,846,2</area>
        </shape>

        <shape name="filter-left-line" from="base_highlight_vertical_line">
            <area>217,40,2,500</area>
        </shape>

        <shape name="filter-right-line" from="base_highlight_vertical_line">
            <area>1061,40,2,500</area>
        </shape>

        <shape name="filter-bottom-backdrop-line" from="base_backdrop_line">
            <area>216,547,848,137</area>
        </shape>

        <shape name="filter-bottom-top-line" from="base_highlight_line">
            <area>217,548,846,2</area>
        </shape>

        <shape name="filter-bottom-bottom-line" from="base_highlight_line">
            <area>217,681,846,2</area>
        </shape>

        <shape name="filter-bottom-left-line" from="base_highlight_vertical_line">
            <area>217,550,2,131</area>
        </shape>

        <shape name="filter-bottom-right-line" from="base_highlight_vertical_line">
            <area>1061,550,2,131</area>
        </shape>

        <shape name="filter-bottom-seperator-first-line" from="base_line">
            <area>238,613,804,2</area>
        </shape>

        <textarea name="filter_text" from="basetextarea">
            <area>242,109,190,32</area>
            <align>right,vcenter</align>
            <value>Directory filter:</value>
        </textarea>

        <textedit name="dirfilter_text" from="base_wide_textedit">
            <area>442,109,580,32</area>
        </textedit>

        <textarea name="type_filter" from="basetextarea">
            <area>242,211,190,40</area>
            <align>right,vcenter</align>
            <value>Type filter:</value>
        </textarea>

        <buttonlist name="typefilter_select" from="base_selector">
            <area>442,211,580,40</area>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,580,40</area>
                    <textarea name="buttontext">
                        <area>15,0,550,40</area>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,580,40</area>
                    <textarea name="buttontext">
                        <area>15,0,550,40</area>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="downscrollarrow">
                <position>584,2</position>
            </statetype>
            <statetype name="upscrollarrow">
                <position>584,21</position>
            </statetype>
        </buttonlist>

        <textarea name="sort_text" from="basetextarea">
            <area>242,321,190,40</area>
            <align>right,vcenter</align>
            <value>Sort by :</value>
        </textarea>

        <buttonlist name="sort_select" from="base_selector">
            <area>442,321,580,40</area>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,580,40</area>
                    <textarea name="buttontext">
                        <area>15,0,550,40</area>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,580,40</area>
                    <textarea name="buttontext">
                        <area>15,0,550,40</area>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="downscrollarrow">
                <position>584,2</position>
            </statetype>
            <statetype name="upscrollarrow">
                <position>584,21</position>
            </statetype>
        </buttonlist>

        <button name="check_button" from="base_medium_button">
            <position>465,431</position>
            <value>Check Filter</value>
        </button>

        <textarea name="numimages_text" from="basetextarea">
            <area>239,551,802,61</area>
            <font>basesmallerblue</font>
            <multiline>true</multiline>
            <align>allcenter</align>
            <value>NumImages_Text</value>
        </textarea>

        <button name="save_button" from="base_medium_button">
            <position>273,628</position>
            <value>Save as default</value>
        </button>

        <button name="done_button" from="base_medium_button">
            <position>657,628</position>
            <value>Done</value>
        </button>

    </window>

</mythuitheme>
