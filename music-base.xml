                                <font>basesupersmallgreen</font>
                                <cutdown>no</cutdown>
                                <align>allcenter</align>
                                <value>PLAYING</value>
                                <alphapulse min="130" max="255" change="2"/>
                            </textarea>
                        </state>
                        <state name="paused">
                            <area>0,0,100%,100%</area>
                            <textarea name="paused" from="basetextarea">
                                <area>57,8,90,20</area>
                                <font>basesupersmallyellow</font>
                                <cutdown>no</cutdown>
