<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.xsd">
<mythuitheme>
    <window name="appearance">
        <area>0,0,1280,720</area>

        <shape name="blackout">
            <type>box</type>
            <fill style="solid" color="black"></fill>
        </shape>

        <imagetype name="preview">
            <filename>preview.png</filename>
            <preserveaspect>FALSE</preserveaspect>
        </imagetype>

        <shape name="appearance-wizard-backdrop" from="base_popup_backdrop">
            <area>320,180,640,360</area>
        </shape>

        <shape name="appearance-wizard-backdrop-line" from="base_backdrop_line">
            <area>321,181,638,358</area>
        </shape>

        <shape name="appearance-top-line" from="base_highlight_line">
            <area>322,182,636,2</area>
        </shape>

        <shape name="appearance-bottom-line" from="base_highlight_line">
            <area>322,536,636,2</area>
        </shape>

        <shape name="appearance-left-line" from="base_highlight_vertical_line">
            <area>322,184,2,352</area>
        </shape>

        <shape name="appearance-right-line" from="base_highlight_vertical_line">
            <area>956,184,2,352</area>
        </shape>

        <shape name="appearance-seperator-first-line" from="base_line">
            <area>341,230,598,2</area>
        </shape>

        <textarea name="title">
            <font>basesmalldarkyellow</font>
            <area>340,184,600,46</area>
            <value>Appearance Wizard</value>
            <align>allcenter</align>
        </textarea>

        <textarea name="part1">
            <font>basesmall</font>
            <area>340,242,600,128</area>
            <value>Move the selected corner of the preview image to the corner of the TV screen.  Press SELECT to edit the other corner. Press MENU for options and ESC to quit.</value>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="size">
            <font>basesmall</font>
            <area>340,380,600,30</area>
            <value>1280 x 720</value>
        </textarea>

        <textarea name="offsets" from="size">
            <area>340,440,600,30</area>
        </textarea>

        <textarea name="changeamount" from="size">
            <area>340,500,600,30</area>
        </textarea>

    </window>
</mythuitheme>
