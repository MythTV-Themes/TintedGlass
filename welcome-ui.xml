<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="welcome_screen">

        <textarea name="heading" from="base_heading">
            <value>Welcome to MythTV</value>
        </textarea>

        <shape name="welcome-backdrop" from="base_backdrop">
            <area>22,38,1236,644</area>
        </shape>

        <shape name="welcome-edge-highlight" from="base_backdrop_with_edge_highlight">
            <area>20,36,1240,648</area>
            <fill style="gradient">
                <gradient alpha="170" direction="vertical">
                    <stop position="0" color="#ffffff" />
                    <stop position="2" color="#000000" alpha="80" />
                    <stop position="98" color="#000000" alpha="80" />
                    <stop position="100" color="#ffffff" alpha="160" />
                </gradient>
            </fill>
        </shape>

        <!--
            current myth status
        -->
        <textarea name="status_text" from="basetextarea">
            <area>40,56,1200,60</area>
            <multiline>yes</multiline>
            <font>baselarge</font>
            <align>allcenter</align>
            <value>MythTV is idle and will shutdown shortly.</value>
        </textarea>

        <shape name="welcome-status-line" from="base_line">
            <area>40,130,1200,2</area>
        </shape>

        <!--
            current recordings status
        -->
        <textarea name="recording_label" from="basetextarea">
            <area>40,140,1200,30</area>
            <font>baselargeyellow</font>
            <align>allcenter</align>
            <value>Current Recording(s)</value>
        </textarea>

        <textarea name="recording_text" from="status_text">
            <area>40,174,1200,170</area>
            <align>hcenter,bottom</align>
            <value>Retrieving Recording Status ...</value>
        </textarea>

        <shape name="welcome-recording-status-line" from="base_line">
            <area>40,352,1200,2</area>
        </shape>

        <!--
            next scheduled recording status
        -->
        <textarea name="scheduled_label" from="recording_label">
            <area>40,364,1200,30</area>
            <value>Next Scheduled Recording(s)</value>
        </textarea>

        <textarea name="scheduled_text" from="recording_text">
            <area>40,420,1200,136</area>
            <value>Retrieving Scheduled Recordings ...</value>
        </textarea>

        <shape name="welcome-scheduled-recording-status-line" from="base_line">
            <area>40,566,1200,2</area>
        </shape>

        <!--
            scheduled recordings conflict warning
        -->
        <textarea name="conflicts_text" from="basetextarea">
            <area>32,588,1216,30</area>
            <font>baselargered</font>
            <align>allcenter</align>
            <value>WARNING: There are conflicting scheduled recordings!</value>
        </textarea>

        <!--
            start frontend button
        -->
        <button name="startfrontend_button" from="base_medium_button">
            <position>465,632</position>
            <value>Start Frontend</value>
        </button>

    </window>

</mythuitheme>
